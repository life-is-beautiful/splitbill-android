<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bills"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

        <TextView
            android:text="Bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_bill"
            android:layout_marginTop="20dp"
            tools:text="Bill"
            android:fontFamily="serif-monospace"
            android:textStyle="normal|bold|italic"
            android:textSize="24sp"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/linearlogin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:paddingTop="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:weightSum="1"
            android:layout_weight="2.88">

            <!--  NickName Label -->

            <android.support.design.widget.TextInputLayout
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView android:id="@+id/input_nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nickname"                   />
            </android.support.design.widget.TextInputLayout>

            <!--  Phone Label -->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView android:id="@+id/input_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Button Submit -->
            <info.hoang8f.widget.FButton
                android:id="@+id/btn_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CONFIRM"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:padding="24dp"
                android:layout_gravity="center_horizontal|bottom"
                fbutton:buttonColor="#952A3C"
                fbutton:shadowColor="#942B39"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>